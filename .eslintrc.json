{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "rules": {
    "@next/next/no-img-element": "off", // Disable warning for using <img>
    "jsx-a11y/alt-text": "off", // Disable warning for missing alt text
    "@typescript-eslint/no-explicit-any": "off", // Disable 'any' type errors
    "@typescript-eslint/no-unused-vars": "off", // Disable unused variable errors
    "no-var": "off" // Disable the 'no-var' error
  }
}
